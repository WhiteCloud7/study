<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.WhiteCloud.UserDao.UserManage">
    <select id="selectAll" resultType="userInfo">
        SELECT * FROM userinfo
    </select>
    <select id="selectByUsername" resultType="userInfo">
        SELECT * FROM userinfo WHERE username LIKE CONCAT('%',#{username},'%')
    </select>
    <select id="selectByOtherInfo" resultType="userInfo">
        <choose>
            <!-- 当三个参数都不为 null 时 -->
            <when test="sex != null or phone != null or email != null">
                SELECT * FROM userinfo WHERE 1=1
                <if test="sex != null">
                    AND sex LIKE CONCAT('%', #{sex}, '%')
                </if>
                <if test="phone != null">
                    AND phone LIKE CONCAT('%', #{phone}, '%')
                </if>
                <if test="email != null">
                    AND email LIKE CONCAT('%', #{email}, '%')
                </if>
            </when>
            <!-- 否则返回空结果 -->
            <otherwise>
                SELECT * FROM userinfo WHERE 1=2
            </otherwise>
        </choose>
    </select>
</mapper>